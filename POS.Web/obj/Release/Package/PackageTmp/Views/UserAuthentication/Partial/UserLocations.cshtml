                                        <div class="col-lg-3">
                                            <label>@Html.CheckBox(item.LocationID.Trim() + "ML" + i, new { }) @item.LocationDesc.Trim() </label>
                                        </div>
                                        i++;
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

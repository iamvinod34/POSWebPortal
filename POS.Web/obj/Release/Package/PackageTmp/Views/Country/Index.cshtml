@using POS.Entity.Entities;
@using POS.Util.Model;
@model CountryModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<script src="~/Scripts/jsCountry.js"></script>
<div class="col-lg-12">
    <h2 class="pad_1per ">Country <button id="btnNewCountryStore" title="Add New Store!" class="btn btn-default pull-right mar_top_1per bckcolor_green" type="button"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></button></h2>
</div>
<div class="col-lg-12 mgn_0">
    <div class="col-lg-3 noPadBrd">
        <div class="input-group col-lg-12 ">
            <input id="txtCountry" type="text" class="form-control col-lg-12 stre_maxWth  ht40" placeholder="Search for  Country ID / Country Name">

        </div>
        <div class="ovrflow">
            @if (Model.Country != null)
            {
                foreach (tbl_Country Country in Model.lstCountry)
                {
                    <div class="locData pad_1per bg_blue">
                        <a class="pointer MasterCountryStore" data-CountryID="@Country.CountryID" data-CountryName="@Country.CountryName"><span class="">@Country.CountryName</span></a>
                    </div>
                }
                <small id="NoRecords" class="lead" style="display:none">
                    No records found.
                </small>
            }
            else
            {
                <small class="lead">
                    No records found.
                </small>
            }
        </div>
    </div>
    <div id="CountryDetails" class="col-lg-9 noPadBrd">
        @Html.Partial("~/Views/Country/Partial/_CountryDetailsPartial.cshtml", Model)
    </div>

</div>




@using POS.Util.Model
@using POS.Entity.Entities
@model MaterialModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<script src="~/Scripts/jsMaterial.js"></script>
<div class="col-lg-12">
    <h2 class="pad_1per ">Material <button id="btnNewMTerminal" title="Add New Material!" class="btn btn-default pull-right mar_top_1per bckcolor_green" type="button"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></button></h2>
</div>
<div class="col-lg-12 mgn_0">
    <div class="col-lg-3 noPadBrd">
        <div class="input-group col-lg-12 ">
            <input id="txtMaterials" type="text" class="form-control col-lg-12 stre_maxWth  ht40" placeholder="Search for  MaterialID \ Material Description">
        </div>
        <div class="ovrflow_Stng">
            @if (Model.GetAllMaterial != null)
            {
                foreach (tbl_Material material in Model.GetAllMaterial)
                {
                    <div class="MlocData pad_1per bg_blue">
                        <a class="pointer MasterMStore" data-MaterialID="@material.MaterialID" data-MaterialDesc="@material.MaterialDesc1"><span class="">@material.MaterialDesc1</span></a>
                    </div>
                }
                <small id="NoRecords" class="lead" style="display:none">
                    No records found.
                </small>
            }
            else
            {
                <small class="lead">
                    No records found.
                </small>
            }
        </div>
    </div>
    <div id="MaterialDetails" class="col-lg-9 noPadBrd">
        @Html.Partial("~/Views/Material/Partial/_MaterialDetailsPartial.cshtml", Model)
    </div>
</div>

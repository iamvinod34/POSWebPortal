@using POS.Entity.Entities
@using POS.Util.Model
@model CustomerModel




@{ string disabled = string.Empty;}
@if (Model != null)
{
    if (!string.IsNullOrEmpty(Model.CustomerID))
    {
        disabled = "disabled";
        <div class="mrg_left_5per"><span class="">Update "@Model.Name1 @Model.Name2" Details</span> </div>
    }
    else
    {
        <div class="mrg_left_5per"><span class="font_med">Add New Customer</span></div>
    }
}
else
{
    <div class="mrg_left_5per"><h3>Add New Customer</h3></div>
}
@using (Ajax.BeginForm("InsertOrUpdateCustomer", "Customer", new AjaxOptions {

    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "",
    LoadingElementId = "",
    OnSuccess = ""

}))
{
<div class="col-lg-12 pad_2per">
    <div class="col-lg-12 pad_1perdiv spn_lebl">
        <div class="col-lg-12"><div class="col-lg-3"><span class="spn_lebl">Mobile No :</span></div><div class="col-lg-6">@Html.TextBoxFor(e => e.Phone, new { @class = "bold form-control", @title = "Please Enter Mobile No " })</div>@Html.ValidationMessageFor(e => e.Phone, null, new { @class = "err_mgs", @data_toggle = "tooltip", @data_placement = "right" })</div>
        <div class="col-lg-12"><div class="col-lg-3"><span class="spn_lebl">Con Mobile No :</span></div><div class="col-lg-6">@Html.TextBoxFor(e => e.ConPhone, new { @class = "bold form-control", @title = "Please Enter Mobile No " })</div></div>
        <div class="col-lg-12"><div class="col-lg-3"><span class="spn_lebl">First Name :</span></div><div class="col-lg-6">@Html.TextBoxFor(e => e.Name1, new { @class = "bold form-control", @title = "Please Enter First Name " })</div></div>
        <div class="col-lg-12"><div class="col-lg-3"><span class="spn_lebl">Last Name :</span></div><div class="col-lg-6">@Html.TextBoxFor(e => e.Name2, new { @class = "bold form-control", @title = "Please Enter Last Name " })</div>@Html.ValidationMessageFor(e => e.Name2, null, new { @class = "err_mgs", @data_toggle = "tooltip", @data_placement = "right" })</div>
        <div class="col-lg-12"><div class="col-lg-3"><span class="spn_lebl">Address :</span></div><div class="col-lg-6">@Html.TextAreaFor(e => e.Address1, new { @class = "bold form-control", @title = "Please Enter Address " })</div></div>
        <div class="col-lg-12"><div class="col-lg-3"><span class="spn_lebl">City :</span></div><div class="col-lg-6">@Html.TextBoxFor(e => e.City, new { @class = "bold form-control", @title = "Please Select City " })</div></div>
        <div class="col-lg-12"><div class="col-lg-3"><span class="spn_lebl">Country :</span></div><div class="col-lg-6">@Html.TextBoxFor(e => e.Country, new { @class = "bold form-control", @title = "Please Select Country" })</div></div>
        <div class="col-lg-12"><div class="col-lg-3"><span class="spn_lebl">Date Of Birth :</span></div><div class="col-lg-6">@Html.TextBoxFor(e => e.DateOfBirth, new { @class = "bold form-control", @title = "Please Enter Date Of Birth" })</div></div>
        <div class="col-lg-12"><div class="col-lg-3"><span class="spn_lebl">Gender :</span></div><div class="col-lg-6">@Html.RadioButtonFor(e => e.Gender, new { @class = "bold form-control", @title = "Please Select Your Gender" }) Male @Html.RadioButtonFor(e => e.Gender, new { @class = "bold form-control", @title = "Please Select Your Gender" }) Female</div></div>
        <div class="col-lg-12"><div class="col-lg-3"><span class="spn_lebl">Password :</span></div><div class="col-lg-6">@Html.PasswordFor(e => e.POSPassword, new { @class = "bold form-control", @title = "Please Enter Passcode " , @maxlength = "4" })</div>@Html.ValidationMessageFor(e => e.POSPassword, null, new { @class = "err_mgs", @data_toggle = "tooltip", @data_placement = "right" })</div>
        <div class="col-lg-12"><div class="col-lg-3"><span class="spn_lebl">Con. Password :</span></div><div class="col-lg-6">@Html.PasswordFor(e => e.ConPassword, new { @class = "bold form-control", @title = "Please Enter Con Passcode", @maxlength = "4" })</div>@Html.ValidationMessageFor(e => e.ConPassword, null, new { @class = "err_mgs", @data_toggle = "tooltip", @data_placement = "right" })</div>
        </div>
</div>
<div class="col-lg-12">
    <div class="col-lg-3"><h5></h5></div>
    <div class="btn-group-lg" role="group" aria-label="Large button group">
        <div class="col-lg-1"><input type="submit" class="btn btn-default btn_inpt_sumbit" value="Save"></div>
        <div class="col-lg-2"><button type="button" class="btn btn-danger btn_inpt_cancel">Cancel</button></div>
    </div>
</div>
}
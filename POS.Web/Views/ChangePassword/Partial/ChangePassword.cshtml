@using POS.Web.Models
@model ChangePassword

<div class="col-lg-12">
    @using (Ajax.BeginForm("ChangePassword", "ChangePassword", new AjaxOptions
        {
            InsertionMode = InsertionMode.Replace,
            LoadingElementId = "loader",
            OnSuccess = "CheckPassword(data)",
            OnFailure = "OnFailure(data)"
    }))
    {
        <div class="col-lg-12 pad_1perdiv spn_lebl">
            <div class="col-lg-12">
                <div class="col-lg-3"><span>Result : @Html.LabelFor(e=>e.Result)</span></div><div class="col-lg-6"></div> <br /><br />
                <div class="col-lg-3"><span>Your Email ID :</span></div><div class="col-lg-6">@Html.TextBoxFor(e => e.Email, new { @class = "form-control", @Value = User.Identity.Name, @disabled = "disabled" })</div>
                <div class="col-lg-12"><div class="col-lg-3"><span>Current Password :</span></div><div class="col-lg-6">@Html.PasswordFor(e => e.CurrentPassword, new { @class = "form-control" })</div>@Html.ValidationMessageFor(e => e.CurrentPassword, null, new { @class = "err_mgs" })</div>
                <div class="col-lg-12"> <div class="col-lg-3"><span>Create New Password :</span> </div><div class="col-lg-6">@Html.PasswordFor(e => e.Password, new { @class = "form-control" })</div>@Html.ValidationMessageFor(e => e.Password, null, new { @class = "err_mgs" })</div>
                <div class="col-lg-12"> <div class="col-lg-3"><span>Re-Enter New Password :</span> </div><div class="col-lg-6">@Html.PasswordFor(e => e.ConfirmPassword, new { @class = "form-control" })</div>@Html.ValidationMessageFor(e => e.ConfirmPassword, null, new { @class = "err_mgs" })</div>
            </div>
            <div class="btn-group-lg right" role="group" aria-label="Large button group">
                <div class="col-lg-1"><input type="submit" class="btn btn-default btn_inpt_sumbit" value="Save" /></div>
                <div class="col-lg-1"><button type="button" class="btn btn-danger btn_inpt_cancel">Cancel</button></div>
            </div>
        </div>
    }
</div>
